def depositar(saldo, valor, extrato, /):
    if valor > 0:
        saldo += valor
        extrato += f"Dep√≥sito:\tR$ {valor:.2f}\n"
        print("\n=== Dep√≥sito conclu√≠do! Seu saldo agradece üí∞ ===")
    else:
        print("\nOps! Valor inv√°lido. Tente novamente com um dep√≥sito positivo üí∞")

    return saldo, extrato


def sacar(*, saldo, valor, extrato, limite, numero_saques, limite_saques):
    excedeu_saldo = valor > saldo
    excedeu_limite = valor > limite
    excedeu_saques = numero_saques >= limite_saques

    if excedeu_saldo:
        print("\nVoc√™ est√° tentando sacar mais do que possui. Revise o valor! ")

    elif excedeu_limite:
        print("\nOps! Esse valor ultrapassa o limite de saque.")

    elif excedeu_saques:
        print("\nVoc√™ j√° sacou o m√°ximo permitido por hoje. Volte amanh√£")

    elif valor > 0:
        saldo -= valor
        extrato += f"Saque:\t\tR$ {valor:.2f}\n"
        numero_saques += 1
        print("\n=== Saque conclu√≠do! Seu bolso sorri. ===")

    else:
        print("\nOps! Valor de saque inv√°lido. Digite um n√∫mero positivo")

    return saldo, extrato


