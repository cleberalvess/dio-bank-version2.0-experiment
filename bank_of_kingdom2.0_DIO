def criar_usuario(usuarios):
    cpf = input("Precisamos do seu CPF pra seguir com o cadastro (somente n√∫mero): ")
    usuario = filtrar_usuario(cpf, usuarios)

    if usuario:
        print("\nOps! J√° temos um registro com esse CPF")
        return

    nome = input("Digite seu nome completo pra gente te conhecer melhor: ")
    data_nascimento = input("Digite sua data de nascimento pra continuar (dd-mm-aaaa): ")
    endereco = input("Digite seu endere√ßo completinho pra finalizar o cadastro (logradouro, nro - bairro - cidade/sigla estado): ")

    usuarios.append({"nome": nome, "data_nascimento": data_nascimento, "cpf": cpf, "endereco": endereco})

    print("=== Cadastro feito! Bem-vindo(a) √† experi√™ncia! ===")


def filtrar_usuario(cpf, usuarios):
    usuarios_filtrados = [usuario for usuario in usuarios if usuario["cpf"] == cpf]
    return usuarios_filtrados[0] if usuarios_filtrados else None


def criar_conta(agencia, numero_conta, usuarios):
    cpf = input("Digite o CPF do usu√°rio pra gente localizar (somente n√∫mero): ")
    usuario = filtrar_usuario(cpf, usuarios)

    if usuario:
        print("\n=== Tudo certo! A conta t√° ativa e pronta pra usar ===")
        return {"agencia": agencia, "numero_conta": numero_conta, "usuario": usuario}

    print("\nUsu√°rio n√£o localizado. Verifique os dados e tente de novo, at√© a pr√≥xima! üëã")


def listar_contas(contas):
    for conta in contas:
        linha = f"""
            Aqui est√£o as contas cadastradas no sistema üëá\n
            Ag√™ncia:\t{conta['agencia']}
            C/C:\t\t{conta['numero_conta']}
            Titular:\t{conta['usuario']['nome']}
        """
        print("=" * 100)
        print(textwrap.dedent(linha))


def main():
    LIMITE_SAQUES = 3
